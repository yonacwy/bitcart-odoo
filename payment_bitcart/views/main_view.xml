<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Search View -->
        <record id="bitcart_main_search_view" model="ir.ui.view">
            <field name="name">bitcart.main.search.view</field>
            <field name="model">bitcart.main</field>
            <field name="arch" type="xml">
                <search string="Bitcart">
                    <field name="name" string="Name" filter_domain="[('name','ilike',self)]"/>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="bitcart_main_kanban_view" model="ir.ui.view">
            <field name="name">bitcart.main.kanban</field>
            <field name="model">bitcart.main</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban" string="Bitcart">
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_content oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('bitcart.main', 'photo', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <li><field name="name"/></li>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Tree View -->
        <record id="bitcart_main_tree_view" model="ir.ui.view">
            <field name="name">bitcart.main.tree.view</field>
            <field name="model">bitcart.main</field>
            <field name="priority" eval="7" />
            <field name="arch" type="xml">
                <tree string="Bitcart">
                     <field name="name"/>
                </tree>
            </field>
        </record>
    
        <!-- Form View -->
        <record id="bitcart_main_form_view" model="ir.ui.view">
            <field name="name">bitcart.main.form.view</field>
            <field name="model">bitcart.main</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Bitcart">
                   <div style="position:absolute; left:0; top:0; width:100%; height:100%;">
                      <iframe     src="https://bitcart.ai"
                               width="100%" height="100%"
                               marginwidth="0" marginheight="0"
                               frameborder="no" scrolling="no"
                               style="border-width:0px; ">
                      </iframe>
                  </div>
                </form>
            </field>
        </record>
    
   
        <!-- Action -->
        <record id="action_bitcart_main_view" model="ir.actions.act_window">
            <field name="name">Bitcart</field>
            <field name="res_model">bitcart.main</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="bitcart_main_kanban_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create o_view_nocontent_smiling_face">
                    Add a new coin.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
